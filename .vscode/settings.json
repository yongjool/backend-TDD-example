{
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier as the default formatter
    "editor.formatOnSave": true, // Format files on save
    "editor.codeActionsOnSave": {
        "source.fixAll": true, // Fix ESLint issues on save
        "source.fixAll.eslint": true // Use ESLint to auto-fix
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json"
    ]
}
